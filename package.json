{
  "name": "tv-show-emoji",
  "version": "1.0.0",
  "description": "CLI tool to suggest emojis for TV show names using local LLM",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile tv-show-emoji"
  },
  "bin": {
    "tv-show-emoji": "./tv-show-emoji"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ollama": "^0.6.0",
    "ora": "^9.0.0"
  }
}
